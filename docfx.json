{
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/**/*.csproj" ],
          "exclude": [ "**/obj/**", "**/bin/**", "tools/**", "tests/**" ]
        }
      ],
      "dest": "docs/api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "noRestore": false,
      "namespaceLayout": "nested",
      "memberLayout": "samePage",
      "EnumSortOrder": "declaringOrder",
      "allowCompilationErrors": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "articles/**/*.md", "articles/**/toc.yml" ],
        "src": "docs",
        "dest": "."
      },
      {
        "files": [ "api/**/*.yml", "api/index.md" ],
        "src": "docs",
        "dest": "."
      },
      {
        "files": [ "toc.yml", "index.md" ],
        "src": "docs",
        "dest": "."
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ],
        "src": "docs",
        "dest": "."
      }
    ],
    "output": "docs/_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appTitle": "DocumentGenerator",
      "_appName": "DocumentGenerator",
      "_appFooter": "DocumentGenerator — Badge &amp; Document Rendering Service · .NET 10",
      "_enableSearch": true,
      "_disableContribution": true,
      "_appLogoPath": ""
    },
    "sitemap": {
      "baseUrl": "http://localhost:8080"
    }
  },
  "serve": {
    "port": 8080
  }
}
